 <LinearLayout android:id="@+id/listClass"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        xmlns:android="http://schemas.android.com/apk/res/android" 
        android:fitsSystemWindows="true" 
        android:gravity="center" android:clickable="true">

     <LinearLayout
         android:id="@+id/linearLayoutClassNum"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:layout_gravity="center"
         android:layout_weight="1"
         android:orientation="vertical" >

         <TextView
             android:id="@+id/textViewClassTime"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="fill_horizontal|center"
             android:text="TextView" android:clickable="true"/>

         <TextView
             android:id="@+id/textViewClassNum"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center_horizontal"
             android:text="TextView" />

     </LinearLayout>

        <TextView
            android:id="@+id/textViewClassName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|fill_vertical"
            android:layout_weight="3"
            android:clickable="true" />

        <LinearLayout
            android:id="@+id/linearLayoutTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewTeacherName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewClassLocation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </LinearLayout>

    </LinearLayout>